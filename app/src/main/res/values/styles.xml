<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg_secondary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:listDivider">@drawable/my_divider</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>


    <style name="text_18_pri">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_18_sec">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>

    <style name="text_16_pri">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_pri</item>
    </style>

    <style name="text_16_sec">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_sec</item>
    </style>
</resources>
