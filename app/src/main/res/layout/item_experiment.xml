<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.pavlospt.roundedletterview.RoundedLetterView
            android:id="@+id/name_preview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:rlv_backgroundColorValue="@color/colorAccent"
            app:rlv_titleColor="@android:color/white"
            app:rlv_titleSize="30sp"
            app:rlv_titleText="A" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_16_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌/车架号：" />

                <TextView
                    android:id="@+id/carid"
                    style="@style/text_16_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙A 123456" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    style="@style/text_16_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总时长：" />

                <TextView
                    android:id="@+id/measureTime"
                    style="@style/text_16_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    style="@style/text_16_sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测验结果：" />

                <TextView
                    android:id="@+id/result"
                    style="@style/text_16_pri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未测量" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                style="@style/text_18_pri"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="2018.9.22 16:27"
                android:textColor="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>