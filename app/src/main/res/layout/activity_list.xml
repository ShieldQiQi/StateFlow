<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/iv_toolbar_about"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="13dp"
            android:src="@drawable/ic_announcement_black_24dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxEms="10"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_toolbar_menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="13dp"
            android:src="@drawable/ic_add_black_24dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:background="#114050"
        android:elevation="4dp">
        <TextView
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="               Keep Racing and race better"
            android:layout_marginTop="8.5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="13dp"
            android:src="@drawable/ic_chrome_reader_mode_black_24dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:background="#114050"
        android:elevation="4dp">
        <TextView
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="               因数据较多、刷新一条数据 1/2*2.22² s"
            android:layout_marginTop="8.5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="13dp"
            android:src="@drawable/ic_chrome_reader_mode_black_24dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:elevation="4dp"
        android:background="#114050">
        <TextView
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:text="               数据没刷新的话请重启软件试试"
            android:layout_marginTop="8.5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="13dp"
            android:src="@drawable/ic_chrome_reader_mode_black_24dp" />
    </FrameLayout>

</LinearLayout>